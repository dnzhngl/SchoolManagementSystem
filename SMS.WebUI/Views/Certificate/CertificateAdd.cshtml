@model CertificateViewModel

<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Belge Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="CertificateAdd" class="shadow-sm" method="post">

    <input type="hidden" asp-for="StudentDTO.Id" />
    <div class="modal-body">

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Dönem Bilgisi</label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="CertificateDTO.SemesterId" asp-items="@(new SelectList(Model.SemesterDTOs, "Id","SemesterInfo"))"></select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Veriliş Tarihi</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" placeholder="Belgenin Basılma Tarihi" asp-for="CertificateDTO.IssueDate">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Belge Türü </label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="CertificateDTO.CertificateTypeId" asp-items="@(new SelectList(Model.CertificateTypeDTOs, "Id","CertificateTypeName"))"></select>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>