@model IEnumerable<GradeDTO>
@{
    ViewData["Title"] = "GradeList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section BeginPage{
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800"></h1>

<div class="card shadow">
    <div class="card-header">
        <h4>Sınıf İşlemleri</h4>
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>

<!-- DataTables Example -->
<div class="card shadow mt-3 col-12 col-xl-6">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-9">
                <h5 class="m-0 font-weight-bold text-primary">Sınıf Listesi</h5>
            </div>
            <div class="col-3">
                @*<a class="btn btn-success" asp-action="GradeAdd">Yeni Kayıt <i class="fa fa-plus-circle"></i></a>*@
                <a class="btn btn-success" data-toggle="modal" data-target="mainModal" href="#" onclick="modalFunction('@Url.Action("GradeAdd", "Grade", "GradeDTO")')">Yeni Kayıt <i class="fa fa-plus-circle"></i></a>

            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sınıf Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GradeDTO grade in Model)
                    {
                        <tr>
                            <td>@grade.GradeName</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Section" asp-action="SectionList" asp-route-id="@grade.Id">Şubeler</a>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Student" asp-action="StudentList" asp-route-id="@grade.Id">Öğrenciler</a>
                                @*<a class="btn btn-outline-warning btn-sm" asp-action="GradeUpdate" asp-route-id="@grade.Id"><i class="fa fa-pen"></i></a>*@
                                <a class="btn btn-outline-warning btn-sm" href="#" onclick="modalFunction('@Url.Action("GradeUpdate", "Grade", new { id = grade.Id })')"><i class="fa fa-pen"></i></a>

                                <a class="btn btn-outline-danger btn-sm" asp-action="GradeDelete" asp-route-id="@grade.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="mainModal" role="dialog" tabindex="-1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent">

        </div>
    </div>
</div>

@section FooterJsPlugin{
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}

@section BeginPageJs{
    <script>
        function modalFunction(url) {
            $('#modalContent').load(url);
            $('#mainModal').modal('show');
        }
    </script>
}