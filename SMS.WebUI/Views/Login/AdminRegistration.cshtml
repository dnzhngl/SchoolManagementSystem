@model AdminDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Yönetici Kayıt</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    @*<div class="col-lg-5 d-none d-lg-block bg-register-image">
                        </div>*@
                    <div class="col">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h1 text-gray-900 mb-4"><b>BİLGE KOLEJİ</b></h1>
                                <h4 class="h4 text-gray-900 mb-4">HESAP OLUSTUR</h4>
                            </div>
                            <form class="user" asp-action="AdminRegistration" asp-controller="Login" method="post">

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input required  class="form-control form-control-user" id="exampleFirstName" placeholder="İsim" asp-for="FirstName">
                                    </div>
                                    <div class="col-sm-6">
                                        <input required  class="form-control form-control-user" id="exampleLastName" placeholder="Soyisim" asp-for="LastName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input required class="form-control form-control-user" id="" placeholder="Kimlik Numarası" asp-for="IdentityNumber">
                                    </div>
                                    <div class="col-sm-6">
                                        <fieldset class="form-group row">
                                            <label class="form-label col-sm-5 pt-0">Cinsiyeti</label>
                                            <div class="col col-sm-3 form-check">
                                                <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Erkek" asp-for="Gender">
                                                <label class="form-check-user" for="gridRadios1">
                                                    Erkek
                                                </label>
                                            </div>
                                            <div class="col col-sm-3 form-check">
                                                <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Kadın" asp-for="Gender">
                                                <label class="form-check-label" for="gridRadios2">
                                                    Kadın
                                                </label>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    @*<div class="col-sm-6 mb-3 mb-sm-0">
                                        <input required type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Addresi" asp-for="User.Email">
                                    </div>*@
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input required type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Şifre" asp-for="User.Password">
                                            @*<div class="col-sm-6 mb-3 mb-sm-0"></div>
                                                <div class="col-sm-6">
                                                    <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Repeat Password" asp-for="FirstName">
                                                </div>*@
                                        </div>
                                    </div>
                                </div>


                                <button class="btn btn-primary btn-user btn-block btn-user" type="submit">
                                    Hesap Oluştur
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="UserLogin"> Giriş Yap !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>
