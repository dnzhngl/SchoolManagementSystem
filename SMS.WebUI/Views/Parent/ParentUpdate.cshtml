@model ParentDTO

@{
    ViewData["Title"] = "ParentUpdate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow">
    <div class="card-header">
        <h4>Veli Bilgisini Güncelle</h4>
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>


<div class="col col-12 col-lg-8 mt-3">

    <div class="card shadow">
        <div class="card-header">
            <h5 class="font-weight-bold text-primary">Veli Bilgisi Güncelleme</h5>
        </div>
        @Html.AntiForgeryToken()

        <div class="card-body">
            <form asp-action="ParentUpdate">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div class="form-body ">
                    <div class="row">
                        <div class="col col-12 col-lg-6">
                            <h4>Kimlik Bilgisi</h4>
                            <hr />

                            <div class="form-group">
                                <label for="formGroupExampleInput">Adı</label>
                                <input type="text" class="form-control" id="" placeholder="Adı" asp-for="FirstName">
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Soyadı</label>
                                <input type="text" class="form-control" id="" placeholder="Soyadı" asp-for="LastName">
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput">Kimlik No</label>
                                <input type="text" class="form-control" id="" placeholder="Kimlik Numarası" asp-for="IdentityNumber">
                                @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })
                            </div>
                            <fieldset class="form-group">
                                <div class="row">
                                    <label class="form-label col-sm-5 pt-0">Cinsiyeti</label>
                                    <div class="col col-sm-3 form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Erkek" asp-for="Gender">
                                        <label class="form-check-label" for="gridRadios1">
                                            Erkek
                                        </label>
                                    </div>
                                    <div class="col col-sm-3 form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Kadın" asp-for="Gender">
                                        <label class="form-check-label" for="gridRadios2">
                                            Kadın
                                        </label>
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                        <div class="col col-12 col-lg-6">
                            <h4>İletişim Bilgisi</h4>
                            <hr />

                            <div class="form-group">
                                <label for="formGroupExampleInput2">Cep Telefonu</label>
                                <input type="tel" class="form-control" placeholder="+90" asp-for="CellPhone">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Ev Telefonu</label>
                                <input type="tel" class="form-control" placeholder="+90" asp-for="HomePhone">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">İş Telefonu</label>
                                <input type="tel" class="form-control" placeholder="+90" asp-for="WorkPhone">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Adres Bilgisi</label>
                                <input type="text" class="form-control" placeholder="" asp-for="Address">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 p-3">
                            <div class="form-actions float-right">
                                <button type="button" class="btn btn-secondary" onclick="history.back()">Geri</button>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>

    </div>

</div>


