@model ParentDTO
@{
    ViewData["Title"] = "ParentDetails";
}

<div class="card shadow">
    <div class="card-header">
        <h4>Veli Bilgisi</h4>
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>

<div class="card shadow mt-2">
    <div class="card-header" id="headingOne">
        <div class="row">
            <div class="col">
                <h4 class="card-title font-weight-bold text-primary">Veli Bilgisi</h4>
            </div>
            <div class="col">
                @if (this.User.IsInRole("Admin"))
                {
                    @*<a class="btn btn-outline-warning btn-sm float-right" href="#" data-toggle="modal" data-target="mainModal" onclick="createModal('@Url.Action("ParentUpdate", "Parent", new { id = Model.ParentDTO.Id })')"><i class="fa fa-pen"></i></a>*@
                    <a class="btn btn-outline-warning btn-sm float-right" asp-action="ParentUpdate" asp-controller="Parent" asp-route-id="@Model.Id"><i class="fa fa-pen"></i></a>
                }
            </div>
        </div>
    </div>

    <div class="card-body">
        <form>
            <div class="row">

                <div class="col col-12 col-lg-4">
                    <h5 class="card-subtitle mb-2 text-muted"><b>Kimlik Bilgisi</b></h5>
                    <hr />
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>TC Kimlik No</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="IdentityNumber">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Adı</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="FirstName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Soyadı</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="LastName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Cinsiyeti</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="Gender">
                        </div>
                    </div>
                </div>

                <div class="col col-12 col-lg-8">
                    <h5 class="card-subtitle mb-2 text-muted">İletişim Bilgisi</h5>
                    <hr />
                    <div class="row">
                        <div class="col col-12 col-lg-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-black-50"><b>Cep Telefonu</b></label>
                                <div class="col-sm-8">
                                    <input type="text" readonly class="form-control-plaintext" asp-for="CellPhone">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-black-50"><b>Ev Telefonu</b></label>
                                <div class="col-sm-8">
                                    <input type="text" readonly class="form-control-plaintext" asp-for="HomePhone">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-black-50"><b>İş Telefonu</b></label>
                                <div class="col-sm-8">
                                    <input type="text" readonly class="form-control-plaintext" asp-for="WorkPhone">
                                </div>
                            </div>
                        </div>
                        <div class="col col-12 col-lg-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-black-50"><b>Adres Bilgisi</b></label>
                                <div class="col-sm-8">
                                    <input type="text" readonly class="form-control-plaintext" asp-for="Address">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


<div class="modal fade" id="mainModal" role="dialog" tabindex="-1" aria-labelledby="mainModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content" id="modelContent">

        </div>
    </div>
</div>

@section BeginPageJS{
    <script>
        function createModal(url) {
            $('#modelContent').load(url);
            $('#mainModal').modal('show');
        }
    </script>
}















