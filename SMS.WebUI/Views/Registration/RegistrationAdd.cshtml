@model StudentDTO
@{
    ViewData["Title"] = "RegistrationAdd";
}

<div class="card border-bottom-primary shadow">
    <div class="card-header">
        <h5 class="font-weight-bold text-primary">Ön Kayıt Ekle</h5>
    </div>
</div>


<div class="card shadow mt-2">
    <div class="card-header">
        <div class="row">
            <h5 class="font-weight-bold text-primary">Ön Kayıt Formu </h5>
        </div>
    </div>
    @Html.AntiForgeryToken()
    <div class="card-body">
        <form asp-action="RegistrationAdd">
            <input type="hidden" asp-for="SchoolNumber" />
            <div class="form-body">
                <div class="row">
                    <div class="col">
                        <h5 class="font-weight-bold text-primary">Öğrenci Bilgisi</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-12 col-lg-6">

                        <div class="form-group">
                            <label for="formGroupExampleInput">Öğrenci Adı</label>
                            <input type="text" class="form-control" id="" placeholder="Adı" asp-for="FirstName">
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Öğrenci Soyadı</label>
                            <input type="text" class="form-control" id="" placeholder="Soyadı" asp-for="LastName">
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Kimlik No</label>
                            <input type="text" class="form-control" id="" placeholder="Kimlik Numarası" asp-for="IdentityNumber">
                            @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })

                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <label class="col-form-label col-sm-5 pt-0">Cinsiyeti</label>
                                <div class="col col-sm-3 form-check">
                                    <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Erkek" asp-for="Gender">
                                    <label class="form-check-label" for="gridRadios1">
                                        Erkek
                                    </label>
                                </div>
                                <div class="col col-sm-3 form-check">
                                    <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Kadın" asp-for="Gender">
                                    <label class="form-check-label" for="gridRadios2">
                                        Kadın
                                    </label>
                                </div>
                            </div>
                        </fieldset>

                        <div class="form-group">
                            <label for="formGroupExampleInput2">Doğum Tarihi</label>
                            <input type="date" class="form-control" asp-for="DOB">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Telefon Numarası</label>
                            <input type="text" class="form-control" placeholder="+90" asp-for="CellPhone">
                        </div>
                    </div>
                    <div class="col col-12 col-lg-6">
                        <h5>Eğitim Bilgileri</h5>
                        <hr />

                        <div class="form-group">
                            <label for="formGroupExampleInput2">Mezun olduğu Okul</label>
                            <input type="text" class="form-control" placeholder="Mezun olduğu okul" asp-for="GraduatedFrom">
                            @Html.ValidationMessageFor(model => model.GraduatedFrom, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput2">Not Ortalaması</label>
                            <input type="text" class="form-control" id="" placeholder="Not Ortalaması" asp-for="GPA">
                            @Html.ValidationMessageFor(model => model.GPA, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col">
                        <h5 class="font-weight-bold text-primary">Veli Bilgisi</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-12 col-lg-6">

                        <div class="form-group">
                            <label for="formGroupExampleInput">Adı</label>
                            <input type="text" class="form-control" id="" placeholder="Adı" asp-for="Parent.FirstName">
                            @Html.ValidationMessageFor(model => model.Parent.FirstName, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Soyadı</label>
                            <input type="text" class="form-control" id="" placeholder="Soyadı" asp-for="Parent.LastName">
                            @Html.ValidationMessageFor(model => model.Parent.LastName, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Kimlik No</label>
                            <input type="text" class="form-control" id="" placeholder="Kimlik Numarası" asp-for="Parent.IdentityNumber">
                            @Html.ValidationMessageFor(model => model.Parent.FirstName, "", new { @class = "text-danger" })

                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <label class="form-label col-sm-5 pt-0">Cinsiyeti</label>
                                <div class="col col-sm-3 form-check">
                                    <input class="form-check-input" type="radio" name="Parent.Gender" id="gridRadios1" value="Erkek" asp-for="Parent.Gender">
                                    <label class="form-check-label" for="gridRadios1">
                                        Erkek
                                    </label>
                                </div>
                                <div class="col col-sm-3 form-check">
                                    <input class="form-check-input" type="radio" name="Parent.Gender" id="gridRadios2" value="Kadın" asp-for="Parent.Gender">
                                    <label class="form-check-label" for="gridRadios2">
                                        Kadın
                                    </label>
                                </div>
                            </div>
                        </fieldset>

                    </div>
                    <div class="col col-12 col-lg-6">
                        <h5>Veli İletişim Bilgisi</h5>
                        <hr />

                        <div class="form-group">
                            <label for="formGroupExampleInput2">Cep Telefonu</label>
                            <input type="tel" class="form-control" placeholder="+90" asp-for="Parent.CellPhone">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Ev Telefonu</label>
                            <input type="tel" class="form-control" placeholder="+90" asp-for="Parent.HomePhone">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">İş Telefonu</label>
                            <input type="tel" class="form-control" placeholder="+90" asp-for="Parent.WorkPhone">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Adres Bilgisi</label>
                            <input type="text" class="form-control" placeholder="" asp-for="Parent.Address">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 p-3">
                        <div class="form-actions float-right">
                            <button type="button" class="btn btn-secondary" onclick="history.back()">Geri</button>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

