@model AdminDTO
@{
    ViewData["Title"] = "AdminDetails";
}

<div class="card border-bottom-primary shadow">
    <div class="card-header">
        <h5 class="card-title font-weight-bold text-primary">Yönetici Bilgisi</h5>
    </div>
</div>


<div class="card shadow mt-2">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <h5 class="card-title font-weight-bold text-primary">Yönetici Bilgisi</h5>
            </div>
            <div class="col">
                <a class="btn btn-outline-warning float-right" href="#" onclick="modalFunction('@Url.Action("AdminUpdate", "Admin", new { id = Model.Id })')"><i class="fa fa-pen"></i></a>
            </div>
        </div>
    </div>

    <div class="card-body">

        <form>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col col-12 col-lg-4">
                    <h5 class="card-subtitle mb-2 text-muted"><b>Kimlik Bilgisi</b></h5>
                    <hr />
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>TC Kimlik No</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="IdentityNumber">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Adı</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="FirstName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Soyadı</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="LastName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Cinsiyeti</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="Gender">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Doğum Tarihi</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="DOB">
                        </div>
                    </div>
                </div>

                <div class="col col-12 col-lg-4">
                    <h5 class="card-subtitle mb-2 text-muted"><b>İletişim Bilgisi</b></h5>
                    <hr />

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Telefon Numarası</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="CellPhone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Adres Bilgisi</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="Address">
                        </div>
                    </div>
                </div>

                <div class="col col-12 col-lg-4">
                    <h5 class="card-subtitle mb-2 text-muted text-black-50"><b>İş Tanımı</b></h5>
                    <hr />

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-black-50"><b>Görevi</b></label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" asp-for="Duty">
                        </div>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>




