@model StudentDTO

<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Öğrenci Durumunu Değiştir</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form method="post" asp-action="ChangeStudentStatus">
    <input type="hidden" asp-for="Id" />

    <div class="modal-body">

        <div class="form-group row">
            <div class="col-md-6 mb-3">
                <label>Öğrencilik Durumu: @Model.StudentStatus</label>
            </div>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" value="Öğrenci" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio1">Öğrenci</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" value="Sevk" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio2">Sevk</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" value="Mezun" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio3">Mezun</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>@*onclick="alertFunction()"*@
    </div>

</form>
