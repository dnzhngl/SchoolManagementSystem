                <input type="text" class="form-control" id="validation" required asp-for="StudentStatus">
                <div class="invalid-feedback">
                    Lütfen Öğrencilik Durumunu Giriniz. (Öğrenci, Sevk, Mezun)
                </div>
            </div>
        </div>*@

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Öğrenci" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio1">Öğrenci</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Sevk" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio2">Sevk</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Mezun" asp-for="StudentStatus">
            <label class="form-check-label" for="inlineRadio3">Mezun</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>@*onclick="alertFunction()"*@
    </div>

