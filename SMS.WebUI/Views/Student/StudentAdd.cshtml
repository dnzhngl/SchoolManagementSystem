@model StudentParentViewModel
@{
    ViewData["Title"] = "StudentAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow">
    <div class="card-header">
        <h4>Ön Kayıt Sayfası</h4>
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>


<div class="col col-12 col-lg-8 mt-3">

    <div class="card shadow">

        <div class="card-header">
            <div class="row float-right">
                <h4>2/3</h4>
            </div>
            <div class="row">
                <h4 class="font-weight-bold text-primary">Ön Kayıt Formu </h4>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="StudentAdd">

                <input type="hidden" asp-for="ParentDTO.Id" />

                <div class="form-body">
                    <div class="row">

                        <div class="col col-12 col-lg-6">
                            <h4>Öğrenci Kişisel Bilgileri</h4>
                            <hr />

                            <div class="form-group">
                                <label for="formGroupExampleInput">Öğrenci Adı</label>
                                <input type="text" class="form-control" id="" placeholder="Adı" asp-for="StudentDTO.FirstName">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Öğrenci Soyadı</label>
                                <input type="text" class="form-control" id="" placeholder="Soyadı" asp-for="StudentDTO.LastName">
                            </div>

                            <fieldset class="form-group">
                                <div class="row">
                                    <label class="col-form-label col-sm-2 pt-0">Cinsiyeti</label>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="StudentDTO.Gender" id="gridRadios1" value="Erkek" asp-for="StudentDTO.Gender">
                                            <label class="form-check-label" for="gridRadios1">
                                                Erkek
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="StudentDTO.Gender" id="gridRadios2" value="Kadın" asp-for="StudentDTO.Gender">
                                            <label class="form-check-label" for="gridRadios2">
                                                Kadın
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <div class="form-group">
                                <label for="formGroupExampleInput2">Doğum Tarihi</label>
                                <input type="date" class="form-control" asp-for="StudentDTO.DOB">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Telefon Numarası</label>
                                <input type="text" class="form-control" placeholder="+90" asp-for="StudentDTO.CellPhone">
                            </div>
                        </div>

                        <div class="col col-12 col-lg-6">
                            <h4>Eğitim Bilgileri</h4>
                            <hr />

                            <div class="form-group">
                                <label for="formGroupExampleInput2">Mezun olduğu Okul</label>
                                <input type="text" class="form-control" placeholder="Mezun olduğu okul" asp-for="StudentDTO.GraduatedFrom">
                            </div>

                            <div class="form-group">
                                <label for="formGroupExampleInput2">Not Ortalaması</label>
                                <input type="text" class="form-control" id="" placeholder="Not Ortalaması" asp-for="StudentDTO.GPA">
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12 p-3">
                            <div class="form-actions float-right">
                                <button type="button" class="btn btn-secondary">İptal Et</button>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>



            </form>
        </div>

    </div>

</div>
