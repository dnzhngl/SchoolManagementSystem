@*@model InstructorDTO*@
@model InstructorBranchViewModel

    <div class="modal-header">
        <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Yeni Öğretmen Ekle </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <form asp-action="InstructorAdd" class="shadow-sm">

        <div class="modal-body">

            <div class="form-group">
                <label for="formGroupExampleInput">Öğretmen Adı</label>
                <input type="text" class="form-control" id="" placeholder="Adı" asp-for="InstructorDTO.FirstName">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Öğretmen Soyadı</label>
                <input type="text" class="form-control" id="" placeholder="Soyadı" asp-for="InstructorDTO.LastName">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Görevi</label>
                <input type="text" class="form-control" id="" placeholder="Görevi" asp-for="InstructorDTO.Duty">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Branşı</label>
                <select class="form-control" asp-for="InstructorDTO.BranchId" asp-items="@(new SelectList(Model.BranchDTOs, "Id","BranchName"))"></select>
            </div>

            <hr />

            <fieldset class="form-group">
                <div class="row">
                    <label>Cinsiyeti </label>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="InstructorDTO.Gender" id="gridRadios1" value="Erkek" checked asp-for="InstructorDTO.Gender">
                            <label class="form-check-label" for="gridRadios1">
                                Erkek
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="InstructorDTO.Gender" id="gridRadios2" value="Kadın" asp-for="InstructorDTO.Gender">
                            <label class="form-check-label" for="gridRadios2">
                                Kadın
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="form-group">
                <label for="formGroupExampleInput2">Doğum Tarihi</label>
                <input type="date" class="form-control" asp-for="InstructorDTO.DOB">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Telefon Numarası</label>
                <input type="text" class="form-control" placeholder="+90" asp-for="InstructorDTO.CellPhone">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Adres Bilgisi</label>
                <input type="text" class="form-control" placeholder="" asp-for="InstructorDTO.Address">
            </div>

        </div>


        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    </form>

