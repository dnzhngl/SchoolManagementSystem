@model SubjectDetailViewModel


<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Ders Bilgilerini Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>


<form asp-action="SubjectUpdate" class="shadow-sm">

    <input type="hidden" asp-for="SubjectDTO.Id" />

    <div class="modal-body">
        <div class="form-group">
            <label for="formGroupExampleInput">Ders Adı</label>
            <input type="text" class="form-control" id="" placeholder="Ders Adı" asp-for="SubjectDTO.SubjectName">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Haftalık Ders Saati</label>
            <input type="text" class="form-control" id="" placeholder="Ders Adı" asp-for="SubjectDTO.WeeklyCourseHours">
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput">Ana Ders</label>
            <select class="form-control" asp-for="SubjectDTO.MainSubjectId" asp-items="@(new SelectList(Model.MainSubjectDTOs,  "Id", "MainSubjectName", Model.SubjectDTO.MainSubject))"></select>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>


</form>

