@model SubjectDetailViewModel
@{
    ViewData["Title"] = "ExamList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section BeginPage{
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800"></h1>


<!-- DataTables Example -->
<div class="card shadow mb-4 col-12 col-xl-8">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-9">
                <h5 class="m-0 font-weight-bold text-primary">Sınav Listesi</h5>
            </div>
            <div class="col-3">
                <a class="btn btn-success" asp-action="ExamAdd">Yeni Kayıt <i class="fa fa-plus-circle"></i></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sınav Adı</th>
                        <th>Ders</th>
                        <th>Sınav Tarihi</th>
                        <th>Başlangıç Saati</th>
                        <th>Bitiş Saati</th>
                        <th>Sınav Türü</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ExamDTO exam in Model.ExamDTOs)
                    {
                    <tr>
                        <td>@exam.ExamName</td>
                        <td>@Model.SubjectDTOs.FirstOrDefault(z => z.Id == exam.SubjectId).SubjectName</td>
                        <td>@exam.ExamDate</td>
                        <td>@exam.ExamStartTime</td>
                        <td>@exam.ExamEndTime</td>
                        <td>@Model.ExamTypeDTOs.FirstOrDefault(z => z.Id == exam.ExamTypeId).ExamTypeName</td>
                        <td>
                            @*<a class="btn btn-outline-primary btn-sm" asp-action="ExamDetails" asp-route-id="@exam.Id"><i class="fa fa-search"></i></a>*@
                            <a class="btn btn-outline-warning btn-sm" asp-action="ExamUpdate" asp-route-id="@exam.Id"><i class="fa fa-pen"></i></a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="ExamDelete" asp-route-id="@exam.Id"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section FooterJsPlugin{
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}