@model SectionGradeViewModel


<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Şube Bilgilerini Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="SectionUpdate" class="shadow-sm">

    <input type="hidden" asp-for="SectionDTO.Id" />

    <div class="modal-body">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Şube Adı </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Dönem Adı" asp-for="SectionDTO.SectionName">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Öğrenci Kapasitesi</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Öğrenci Kapasitesi" asp-for="SectionDTO.StudentCapacity">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Kayıtlı Öğrenci Sayısı</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Kayıtlı Öğrenci Sayısı" asp-for="SectionDTO.NumberOfStudentsEnrolled">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Sınıf Bilgisi</label>
            <div class="col-sm-8">
                <select class="form-control" asp-for="SectionDTO.GradeId" asp-items="@(new SelectList(Model.GradeDTOs, "Id","GradeName", Model.SectionDTO.Grade))"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput2">Danışman Öğretmen</label>
            <select class="form-control" asp-for="SectionDTO.AdvisoryTeacherId" asp-items="@(new SelectList(Model.InstructorDTOs, "Id", "FullNameBranch", Model.SectionDTO.AdvisoryTeacher))"></select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>