@model SectionGradeViewModel
@{
    ViewData["Title"] = "SectionUpdate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Şube Bilgilerini Güncelle</h3>

<div class="row">
    <div class="col col-12 col-lg-4 p-2">

        <form asp-action="SectionUpdate" class="shadow-sm">

            <input type="hidden" asp-for="SectionDTO.Id" />

            <div class="form-body">
                <div class="row p-2">
                    <div class="col p-3">

                        <div class="form-group">
                            <label for="formGroupExampleInput">Şube Adı</label>
                            <input type="text" class="form-control" placeholder="Şube Adı" asp-for="SectionDTO.SectionName">
                        </div>

                        <div class="form-group">
                            <label for="formGroupExampleInput">Sınıfı</label>
                            <select class="form-control" asp-for="GradeDTO.Id" asp-items="@(new SelectList(Model.GradeDTOs, "Id","GradeName", Model.SectionDTO.GradeDTO))"></select>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-12 p-4">
                        <div class="form-actions float-right">

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <button type="button" class="btn btn-secondary">İptal Et</button>

                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>