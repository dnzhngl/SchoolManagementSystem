@model StudentDetailsViewModel
@{
    ViewData["Title"] = "StudentExamResults";
}

@section BeginPage{
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800"></h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @*<li class="breadcrumb-item"><a asp-controller="Student" asp-action="StudentDetails" asp-route-studentId="@Model.StudentDTO.Id"> Kişisel Bilgileri</a></li>*@
        <li class="breadcrumb-item"> <a asp-controller="Certificate" asp-action="CertificateList" asp-route-studentId="@Model.StudentDTO.Id">Belge Listesi</a></li>
        <li class="breadcrumb-item active"><a asp-controller="ExamResult" asp-action="StudentExamResults" asp-route-studentId="@Model.StudentDTO.Id"> Not Bilgisi</a></li>
        <li class="breadcrumb-item"><a asp-controller="Attendance" asp-action="AttendanceList" asp-route-studentId="@Model.StudentDTO.Id"> Devamsızlık Bilgisi</a></li>
    </ol>
</nav>

<div class="card shadow">
    <div class="card-header">
        <h4> Sınav Sonuçları</h4>
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>


<!-- DataTales Example -->
<div class="card shadow mt-3">
    <div class="card-header py-3">
        <div class="row">
            <div class="col">
                <h5 class="m-0 font-weight-bold text-primary"> @Model.StudentDTO.FirstName @Model.StudentDTO.LastName Sınav Sonuçları Listesi</h5>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sınav</th>
                        <th>Tarih</th>
                        <th>Sınav Notu</th>
                        <th>Durumu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ExamResultDTO examResult in Model.ExamResultDTOs)
                    {
                        <tr>
                         
                            <td>@examResult.Exam.ExamName</td>
                            <td>@examResult.Exam.ExamDate.ToString("dd/MM/yyyy")</td>
                            <td>@examResult.ExamMark</td>
                            <td>@examResult.StudentStatus</td>
                            <td>

                                <a class="btn btn-outline-warning btn-sm" href="#" onclick="modalFunction('@Url.Action("ExamResultUpdate", "ExamResult", new { examResultId = examResult.Id})')"><i class="fa fa-pen"></i></a>
                                @*<a class="btn btn-outline-primary btn-sm" asp-action="InstructorDetails" asp-route-id="@instructor.Id"><i class="fa fa-search"></i></a>*@
                                <a class="btn btn-outline-danger btn-sm" asp-action="ExamResultDelete" asp-route-id="@examResult.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="mainModal" role="dialog" tabindex="-1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent">

        </div>
    </div>
</div>

@section FooterJsPlugin{
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}

@section BeginPageJs{
    <script>
        function modalFunction(url) {
            $('#modalContent').load(url);
            $('#mainModal').modal('show');
        }
    </script>
}