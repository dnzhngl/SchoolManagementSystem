@model TimetableViewModel

<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Ders Bilgilerini Güncelle </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="TimetableUpdate" class="shadow-sm">

    <input type="hidden" asp-for="TimetableViewDTO.Id" />

    <div class="modal-body">

        @*<div class="form-group">
                <label for="formGroupExampleInput2">Şube</label>
                <select class="form-control" asp-for="TimetableViewDTO.SectionName" asp-items="@(new SelectList(Model.SectionDTOs, "Id","SectionName", Model.SectionDTO.SectionName))"></select>
            </div>*@
        <div class="form-group">
            <label for="formGroupExampleInput2">Şube</label>
            <input class="form-control" readonly asp-for="TimetableViewDTO.SectionName">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Derslik</label>
            <select class="form-control" asp-for="TimetableViewDTO.ClassroomName" asp-items="@(new SelectList(Model.ClassroomDTOs, "Id", "ClassroomName", Model.TimeTableDTO.ClassroomDTO))"></select>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Ders</label>
            <select class="form-control" asp-for="TimetableViewDTO.SubjectName" asp-items="@(new SelectList(Model.SubjectDTOs, "Id", "SubjectName", Model.TimeTableDTO.SubjectDTO))"></select>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Öğretmen</label>
            <select class="form-control" asp-for="TimetableViewDTO.Instructor" asp-items="@(new SelectList(Model.InstructorDTOs, "Id","FullNameBranch", Model.TimeTableDTO.InstructorDTO))"></select>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Gün</label>
            <select class="form-control" asp-for="TimetableViewDTO.DayName" asp-items="@(new SelectList(Model.DayDTOs, "Id","DayName", Model.TimeTableDTO.DayDTO))"></select>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Ders Saati</label>
            <select class="form-control" asp-for="TimetableViewDTO.LessonPeriod" asp-items="@(new SelectList(Model.LessonTimeDTOs, "Id", "LessonPeriod", Model.TimeTableDTO.LessonTimeDTO))"></select>
        </div>

    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>


