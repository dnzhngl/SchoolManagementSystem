@model BranchDTO


<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel" >Branş Bilgilerini Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="BranchUpdate" class="shadow-sm">

    <input type="hidden" asp-for="Id" />

    <div class="modal-body">
        <div class="form-group">
            <label><b>Branş Adı</b></label>
            <input class="form-control" placeholder="BranchName" asp-for="BranchName">
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>

