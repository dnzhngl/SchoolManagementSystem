@model PostViewModel
@{
    ViewData["Title"] = "PostAdd";
}


<div class="card shadow">
    <div class="card-header">
        @if (ViewBag.postCategoryName == "Etkinlik")
        {
            <h4> Etkinlik İşlemleri</h4>
        }
        else if (ViewBag.postCategoryName == "Duyuru")
        {
            <h4> Duyuru İşlemleri</h4>
        }
        else if (ViewBag.postCategoryName == "Ödev")
        {
            <h4> Ödev İşlemleri</h4>
        }
    </div>
    <div class="card-body">
        <p></p>
    </div>
</div>

<div class="row">
    <div class="col col-12 col-lg-6 mt-3">
        <div class="card shadow">

            <div class="card-header">
                <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">@ViewBag.postCategoryName Ekle</h5>
            </div>

            <form asp-action="PostAdd" enctype="multipart/form-data">

                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">@ViewBag.postCategoryName Adı :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="@ViewBag.postCategoryName Adı" asp-for="PostDTO.PostName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="exampleFormControlFile1">Dosya Ekle : </label>

                        <div class="col-sm-10 ">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-preview thumbnail" data-trigger="fileinput"> </div>
                                <div>
                                    <span class="btn btn-outline btn-file">
                                        @*<span class="fileinput-new"> Dosya Seç </span>
                                        <span class="fileinput-exists"> Değiştir </span>*@
                                        <input type="file" asp-for="File">
                                    </span>
                                    <a href="javascript:;" class="btn btn-outline-danger btn-sm fileinput-exists" data-dismiss="fileinput"><i class="fa fa-trash"></i></a>
                                </div>
                            </div>
                        </div>
                        @*
                            <div class="col-sm-8">
                                <input type="file" class="form-control-file" id="exampleFormControlFile1">
                            </div>*@
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="formGroupExampleInput">İçerik : </label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="10" placeholder="İçerik" asp-for="PostDTO.PostContent"></textarea>
                            @*<input type="text" class="form-control" id="" placeholder="İçerik" asp-for="PostContent">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="PostDTO.PublishedDate" value="@DateTime.Now">
                    </div>

                    <div class="form-actions float-right p-1">
                        <button type="button" class="btn btn-secondary">İptal Et</button>
                        <button type="submit" class="btn btn-primary" asp-route-postCategoryName="@ViewBag.postCategoryName">Kaydet</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

