@model ClassroomDTO

<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Derslik Bilgilerini Güncelle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="ClassroomUpdate" class=" shadow-sm">

    <input type="hidden" asp-for="Id" />

    <div class="modal-body">
        <div class="form-group">
            <label for="formGroupExampleInput">Derslik Adı</label>
            <input type="text" class="form-control" id="" placeholder="" asp-for="ClassroomName">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Öğrenci Kapasitesi</label>
            <input type="text" class="form-control" id="" placeholder="" asp-for="StudentCapacity">
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>
