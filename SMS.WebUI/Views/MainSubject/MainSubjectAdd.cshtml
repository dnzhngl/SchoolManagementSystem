@model MainSubjectDTO

<div class="modal-header">
    <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Yeni Ana Ders Ekle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="MainsubjectAdd" class="shadow-sm">

    <div class="modal-body">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Ana Ders Adı </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Ana Ders Adı" asp-for="MainSubjectName">
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form>
